{
  "compilerOptions": {
    "allowUnusedLabels": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "window.createElement",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node", "mocha"]
  },
  "exclude": ["**/tsignore/**/*.ts", "**/tsignore/**/*.tsx"]
}
